{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {       
        "nr-ngx-component-lib": {
            "projectType": "library",
            "root": "projects/nr-ngx-component-lib",
            "sourceRoot": "projects/nr-ngx-component-lib/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/nr-ngx-component-lib/tsconfig.lib.json",
                        "project": "projects/nr-ngx-component-lib/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/nr-ngx-component-lib/tsconfig.lib.prod.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "storybook": {
                    "builder": "@storybook/angular:start-storybook",
                    "options": {
                        "configDir": ".storybook",
                        "browserTarget": "nr-ngx-component-lib:build",
                        "compodoc": false,
                        "port": 6006,
                        "styles": [
                            "projects/nr-ngx-component-lib/src/styles/global.scss",
                            "projects/nr-ngx-component-lib/src/styles/material.scss",
                            "node_modules/@busacca/ng-pick-datetime/assets/style/picker.scss"
                        ]
                    }
                },
                "build-storybook": {
                    "builder": "@storybook/angular:build-storybook",
                    "options": {
                        "configDir": ".storybook",
                        "browserTarget": "nr-ngx-component-lib:build",
                        "compodoc": false,
                        "outputDir": "storybook-static"
                    }
                }
            }
        }
    },
    "cli": {
        "analytics": false
    }
}
